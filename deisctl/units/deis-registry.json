{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"deis-registry",
      "labels":{
         "name":"deis-registry"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"deis-registry"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"deis-registry"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"deis-registry",
                  "image":"deis/registry:v1.9.0",
                  "ports":[
                     {
                        "hostPort":5000,
                        "containerPort":5000
                     }
                   ],
                   "env":[
                     {
                       "name" : "EXTERNAL_PORT",
                       "value" : "5000"
                     }
                   ],
                   "volumeMounts": [
                    { "name": "env",
                      "mountPath": "/etc/environment"}
                    ]
               }
            ],
            "volumes":[
              { "name": "env",
                "hostPath": {
                    "path": "/etc/environment"}
              }
            ]
         }
      }
   }
}
