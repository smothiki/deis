{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"deis-controller",
      "labels":{
         "name":"deis-controller"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"deis-controller"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"deis-controller"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"deis-controller",
                  "image":"registry.smothiki.io:5000/deis/controller:git-bf6077d",
                   "env":[
                     {
                       "name" : "HOST",
                       "value" : "10.240.3.1"
                     }
                   ],
                   "volumeMounts": [
                    { "name": "logs",
                      "mountPath": "/data"},
		                { "name": "sock",
                      "mountPath": "/var/run/docker.sock"}
                    ]
               }
            ],
            "volumes":[
              { "name": "logs",
                "hostPath": {
                    "path": "/var/lib/deis/store"}
              },
      	      {
      		        "name":"sock",
      		          "hostPath":{
      			             "path":"/var/run/docker.sock"
                    }
      	      }
            ]
         }
      }
   }
}
